init_config:

instances:
<% node['datadog']['services']['php_fpm'].each do |i| -%>
  - status_url: <%= i['php_status_url'] %>
    ping_url: <%= i['php_ping_url'] %>
    ping_reply: pong
  <% if i.key?('tags') -%>
    tags:
    <% i['tags'].each do |t| -%>
    - <%= t %>
    <% end -%>
  <% end -%>
<% end -%>