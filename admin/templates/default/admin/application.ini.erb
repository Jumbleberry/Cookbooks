[main]
; App Setting

app.title                                           = "JB:Admin"
app.pager.type                                      = "sliding"
app.version                                         = "3.1.1"
app.pager.limit                                     = 10
app.pager.range                                     = 8

; Initialize App Startup
includePaths.library                                = APPLICATION_PATH "/../library"
bootstrap.path                                      = APPLICATION_PATH "/Bootstrap.php"
bootstrap.class                                     = "Bootstrap"
appnamespace                                        = "Application"

resources.frontController.controllerDirectory       = APPLICATION_PATH "/controllers"
resources.frontController.moduleDirectory           = APPLICATION_PATH "/modules" 
resources.frontController.params.displayExceptions  = 0
resources.frontController.plugins.layoutloader      = Jb_Plugin_LayoutLoader
resources.view.helperPath.Jb_View_Helper_           = "Jb/View/Helper/"

; Layouts
resources.modules[]                                 = ""
resources.layout.layout                             = "layout"
resources.layout.layoutPath                         = APPLICATION_PATH "/layouts/"
mobile.resources.layout.layout                      = "layout"
mobile.resources.layout.layoutPath                  = APPLICATION_PATH "/modules/mobile/layouts/"

autoloaderNamespaces.jb                             = "Jb_"
autoloaderNamespaces.fb                             = "Fb_"
autoloaderNamespaces.pq                             = "Pq_"

; Affiliate Redirect URL
jbxrouter.url                                       = "<%= node['admin']['jbxroute'] %>"

; Pixel url
pixels.url                                          = "<%= node['admin']['jbxtrack'] %>"

; File Manager directory
filemanager.directory                               = "<%= node['admin']['s3_bucket']['s3'] %>/bank/"

; User Image directory
user_images.directory                               = "<%= node['admin']['s3_bucket']['s3'] %>/images/user/"
user_images.uploadDirectory                         = "<%= default['admin']['s3_bucket']['upload'] %>/images/user/"

; Bank Directory
bank.directory                                      = APPLICATION_PATH "/../public/_bank/"

; Image FTP
ftp.image.public_url                                = ""


;Keys
key.salt                                            = "<%= node['admin']['key_salt'] %>"
key.pass                                            = "<%= node['admin']['key_pass'] %>"


; Database : Affiliate Redirect
resources.db.redirect.params.host                   = "<%= node['admin']['redirect']['hosts'] %>"
resources.db.redirect.params.username               = "<%= node['admin']['redirect']['username'] %>"
resources.db.redirect.params.password               = "<%= node['admin']['redirect']['password'] %>"
resources.db.redirect.params.dbname                 = "<%= node['admin']['redirect']['dbname'] %>"

; Mail SMTP
email.server                                        = "<%= node['admin']['email']['email_server'] %>"
email.config.username                               = "<%= node['admin']['email']['username'] %>"
email.config.password                               = "<%= node['admin']['email']['password'] %>"
email.config.auth                                   = "<%= node['admin']['email']['auth'] %>"
email.config.port                                   = "<%= node['admin']['email']['port'] %>"

[<%= node['admin']['environment'] %> : main]
; Database : Master 
resources.db.master.params.host                     = "<%= node['admin']['mysql_write']['host'] %>"
resources.db.master.params.username                 = "<%= node['admin']['mysql_write']['username'] %>"
resources.db.master.params.password                 = "<%= node['admin']['mysql_write']['password'] %>"
resources.db.master.params.dbname                   = "<%= node['admin']['mysql_write']['dbname'] %>"
resources.db.master.default                         = "<%= node['admin']['mysql_write']['default'] %>"

; Database : Slave
resources.db.slave.params.host                      = "<%= node['admin']['mysql_read']['host'] %>"
resources.db.slave.params.username                  = "<%= node['admin']['mysql_read']['username'] %>"
resources.db.slave.params.password                  = "<%= node['admin']['mysql_read']['password'] %>"
resources.db.slave.params.dbname                    = "<%= node['admin']['mysql_read']['dbname'] %>"

phpSettings.display_startup_errors                  = "<%= node['admin']['display_startup_errors'] %>"
phpSettings.display_errors                          = "<%= node['admin']['php_display_errors'] %>"
resources.frontController.params.displayExceptions  = "<%= node['admin']['display_exceptions'] %>"