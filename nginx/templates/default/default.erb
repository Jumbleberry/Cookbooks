server {
    listen 80 default_server;
    server_name _ default;
    
    location /status/nginx {
        stub_status on;
        access_log off;
    }

    location /status/fpm {
        access_log off;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        include        fastcgi_params;
    }
}