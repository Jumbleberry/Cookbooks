server {
    listen 80 default_server;
    server_name _ default;
    
    access_log off;
    error_log off;
    
    set $real_x_forwarded_for $http_x_forwarded_for;
    set $upstream '';
    
    location = / {
        return 204;
    }

    location /nginx {
        stub_status on;
    }

    location /fpm {
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_param SCRIPT_FILENAME /fpm;
        include fastcgi_params;
    }
    
    location /fpm-ping {
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_param SCRIPT_FILENAME /fpm-ping;
        include fastcgi_params;
    }

    location ^~ /consul/ {
        proxy_pass http://127.0.0.1:8500/ui/;
    }

    location ^~ /v1/ {
        proxy_pass http://127.0.0.1:8500/v1/;
    }

    root /var/www/gearman-ui/web;

    location = /gearman {
        rewrite ^([^.]*[^/])$ $1/ permanent;
    }
    
    location ^~ /gearman/ {
        try_files $uri $uri/ @site;
    }

    location ~* /vendor.*/([^/]+)$ {
        root /var/www/gearman-ui/public;
        try_files /$1 =404;
    }

    if ($request_uri ~ ^/gearman(.*)$ ) {
        set $request_url $1;
    }

    location @site {
        fastcgi_pass   unix:/var/run/php5-fpm.sock;
        include fastcgi_params;
        fastcgi_param  SCRIPT_FILENAME /var/www/gearman-ui/web/index.php;
        fastcgi_param  REQUEST_URI $request_url;
    }
}