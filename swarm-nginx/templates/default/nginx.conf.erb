user                    www-data;
pid                     /var/run/nginx.pid;

worker_processes        auto;
worker_rlimit_nofile    124000;

thread_pool             pool_1 threads=16;
thread_pool             pool_2 threads=16;
thread_pool             pool_3 threads=16;
thread_pool             pool_4 threads=16;

events {
    worker_connections  16384;
    use                 epoll;
    multi_accept        on;
}

http {
    server_tokens off;
    include mime.types;
    
    sendfile                    on;
    tcp_nopush                  on;
    tcp_nodelay                 on;
    reset_timedout_connection   on;

    client_body_buffer_size     16k;
    client_max_body_size        64k;
    client_header_buffer_size   1k;
    large_client_header_buffers 4 1k;
    output_buffers              4 32k;
    postpone_output             1460;
    
    fastcgi_read_timeout        10;
    fastcgi_buffering           on;
    fastcgi_buffers             64 4k;
    fastcgi_buffer_size         4k;
    
    keepalive_requests          512000;
    keepalive_timeout           120;
    client_header_timeout       120;
    client_body_timeout         120;
    send_timeout                120;

    open_file_cache             max=16384 inactive=5m;
    open_file_cache_valid       5m;
    open_file_cache_min_uses    1;
    open_file_cache_errors      on;
		
    gzip                        off;
    gzip_vary                   off;
    gzip_proxied                any;
    gzip_comp_level             5;
    gzip_min_length             1024;
    gzip_buffers                32 4k;
    gzip_types                  application/x-javascript text/css application/javascript
        text/javascript text/plain text/xml application/json application/vnd.ms-fontobject
        application/x-font-opentype application/x-font-truetype application/x-font-ttf
        application/xml font/eot font/opentype font/otf image/svg+xml image/vnd.microsoft.icon;
    gzip_disable "MSIE [1-6]\.";
    
    proxy_cache_path /mnt/disk1 levels=1:2 keys_zone=pool_1:32m inactive=60m max_size=1G use_temp_path=off;
    proxy_cache_path /mnt/disk2 levels=1:2 keys_zone=pool_2:32m inactive=60m max_size=1G use_temp_path=off;
    proxy_cache_path /mnt/disk3 levels=1:2 keys_zone=pool_3:32m inactive=60m max_size=1G use_temp_path=off;
    proxy_cache_path /mnt/disk4 levels=1:2 keys_zone=pool_4:32m inactive=60m max_size=1G use_temp_path=off;
    
    split_clients $request_uri $pool {
        25%     "pool_1";
        25%     "pool_2";
        25%     "pool_3";
        *       "pool_4";
    }
    
    pagespeed                   off;
    
    pagespeed                   RewriteLevel CoreFilters;
    pagespeed                   ProcessScriptVariables on;
    pagespeed                   StaticAssetPrefix /static/;
    pagespeed                   LowercaseHtmlNames on;
    pagespeed                   FetchHttps enable;
    pagespeed                   UseNativeFetcher on;
    resolver                    8.8.8.8;
    pagespeed                   XHeaderValue 'Powered by JBX Swarm';
                                
    pagespeed                   LRUCacheKbPerProcess          131072;
    pagespeed                   LRUCacheByteLimit             65536;
    pagespeed                   GoogleFontCssInlineMaxBytes   65536;
    pagespeed                   CssInlineMaxBytes             65536;
    pagespeed                   MemcachedServers              "127.0.0.1:11211";
    pagespeed                   MemcachedTimeoutUs            250000;
    pagespeed                   ImageMaxRewritesAtOnce        32;
                                
    pagespeed                   FileCachePath /var/cache/pagespeed/file;
    pagespeed                   MessageBufferSize 32000;
    pagespeed                   CreateSharedMemoryMetadataCache /var/cache/pagespeed/memory 131072;
                                
    pagespeed                   StatisticsPath /ngx_pagespeed_statistics;
    pagespeed                   GlobalStatisticsPath /ngx_pagespeed_global_statistics;
    pagespeed                   MessagesPath /ngx_pagespeed_message;
    pagespeed                   ConsolePath /pagespeed_console;
    pagespeed                   AdminPath /pagespeed_admin;
    pagespeed                   GlobalAdminPath /pagespeed_global_admin;
    
    log_format main      '$remote_addr - $remote_user [$time_local]  '
      '"$request" $status $bytes_sent '
      '"$http_referer" "$http_user_agent" '
  		'"$gzip_ratio"';

    log_format download  '$remote_addr - $remote_user [$time_local]  '
      '"$request" $status $bytes_sent '
      '"$http_referer" "$http_user_agent" '
  		'"$http_range" "$sent_http_content_range"';

    log_not_found               off;
    access_log                  off;
    error_log                   off;
    
    # Main Server Entry
    server {
        listen 80;
        listen 443 ssl spdy http2;
        server_name default_server;
        
        gzip                        on;
        gzip_vary                   on;
        gzip_proxied                any;
        
        access_log                  /var/log/nginx/access_log main buffer=4k flush=1m;
        error_log                   /var/log/nginx/error_log warn;
    
        add_header                  X-Frame-Options SAMEORIGIN;
        add_header                  X-XSS-Protection "1; mode=block;";
        add_header                  Strict-Transport-Security "max-age=86400; includeSubDomains" always;
        
        ssl_session_cache           shared:SSL:64m;
        ssl_session_timeout         120m;
        ssl_dhparam                 /etc/nginx/dhparam.pem;
        ssl_protocols               TLSv1 TLSv1.1 TLSv1.2;
        ssl_ciphers                 EECDH+CHACHA20:EECDH+CHACHA20-draft:EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;
        ssl_prefer_server_ciphers   on;
        
        ssl_stapling                on;
        ssl_stapling_verify         on;
        ssl_trusted_certificate     /home/vagrant/nginx/jbxroute.pem;
        resolver                    8.8.8.8 8.8.4.4;

        ssl_certificate             /home/vagrant/nginx/jbxroute.pem;
        ssl_certificate_key         /home/vagrant/nginx/jbxroute.key;
        
        location / {
            aio threads=$pool;
            
            proxy_cache             $pool;
            proxy_cache_key         "$scheme$uri";
            proxy_cache_revalidate  on;
            proxy_cache_min_uses    3;
            proxy_cache_lock        off;
            proxy_cache_valid       all 10m;
            
            proxy_read_timeout      10;
            proxy_set_header        Host $http_host;
            
            add_header              X-Cache-Status $upstream_cache_status;
            
            proxy_pass              http://127.0.0.1:8080;
        }
        
        location ~ \.php$ {
            try_files $uri index.php =404;
            fastcgi_pass unix:/var/run/php5-fpm.sock;
            fastcgi_index index.php;
            fastcgi_split_path_info       ^(.+\.php)(/.+)$;
            fastcgi_param PATH_INFO       $fastcgi_path_info;
            fastcgi_param PATH_TRANSLATED $document_root$fastcgi_path_info;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
            include fastcgi_params;
            fastcgi_read_timeout 600;
        }
    }
    
    # Pagespeed Proxy Configuration
    server {
        listen 8080;
        server_name pagespeed;
        root /html;
        
        pagespeed   on;
        
        pagespeed EnableFilters add_instrumentation;
        pagespeed EnableFilters collapse_whitespace;
        pagespeed EnableFilters dedup_inlined_images;
        pagespeed EnableFilters elide_attributes;
        pagespeed EnableFilters inline_google_font_css;
        pagespeed EnableFilters lazyload_images;
        pagespeed EnableFilters move_css_to_head;
        pagespeed EnableFilters insert_dns_prefetch;
        pagespeed EnableFilters prioritize_critical_css;
        pagespeed EnableFilters remove_comments;
        pagespeed EnableFilters rewrite_css,sprite_images;
        pagespeed EnableFilters convert_jpeg_to_progressive;
        pagespeed EnableFilters convert_jpeg_to_webp;
        
        index index.html;
    }
}