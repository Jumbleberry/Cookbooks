user                            www-data;
pid                             /var/run/nginx.pid;
                                
worker_processes                auto;
worker_rlimit_nofile            124000;
                                
thread_pool                     default  threads=32 max_queue=65536;
thread_pool                     pool_ssi threads=32 max_queue=65536;
thread_pool                     pool_ps  threads=32 max_queue=65536;
thread_pool                     pool_php threads=32 max_queue=65536;

events {
    worker_connections          65536;
    use                         epoll;
    multi_accept                on; 
}

http {
    map $http_x_forwarded_proto $real_scheme {
        'http'                  $http_x_forwarded_proto;
        'https'                 $http_x_forwarded_proto;
        default                 $scheme;
        '-'                     $scheme;
    }
    
    map $subdomain $device {
        'm'                     'mobile';
        'tablet'                'tablet';
        'www'                   'desktop';
        default                 'default';
        ''                      'default';
    }

    server_tokens               off;
    include                     mime.types;
    
    sendfile                    on;
    tcp_nopush                  on;
    tcp_nodelay                 on;
    reset_timedout_connection   on;

    client_body_buffer_size     16k;
    client_max_body_size        64k;
    client_header_buffer_size   2k;
    large_client_header_buffers 4 4k;
    output_buffers              4 32k;
    postpone_output             1460;
    
    fastcgi_read_timeout        120;
    fastcgi_buffering           on;
    fastcgi_request_buffering   off;
    fastcgi_buffers             64 4k;
    fastcgi_max_temp_file_size  0;
    fastcgi_buffer_size         4k;
    fastcgi_keep_conn           on;
    
    fastcgi_cache_path          /dev/shm/php levels=1:2 keys_zone=cache_php:64m inactive=300m max_size=<%= @cache_size / 2 %>k use_temp_path=off;
    fastcgi_cache_valid         200 204 301 302 307 308 403 300m;
    fastcgi_cache_revalidate    off;
    fastcgi_cache_use_stale     off;
    
    proxy_cache_path            /dev/shm/ssi levels=1:2 keys_zone=cache_ssi:64m inactive=15m max_size=<%= @cache_size / 2 %>k use_temp_path=off;
    proxy_cache_valid           200 204 301 302 307 308 403 15m;
    
    keepalive_requests          512000;
    keepalive_timeout           300;
    client_header_timeout       120;
    client_body_timeout         120;
    send_timeout                120;

    open_file_cache             max=16384 inactive=300m;
    open_file_cache_valid       5m;
    open_file_cache_min_uses    1;
    open_file_cache_errors      on;
    
    resolver                    156.154.70.1 8.8.8.8 8.8.4.4 valid=60s;
    resolver_timeout            10s;
    
    gzip                        on;
    gzip_vary                   off;
    gzip_proxied                any;
    gzip_comp_level             5;
    gzip_min_length             1024;
    gzip_buffers                32 4k;
    gzip_types                  application/x-javascript text/css application/javascript
        text/javascript text/plain text/xml application/json application/vnd.ms-fontobject
        application/x-font-opentype application/x-font-truetype application/x-font-ttf
        application/xml font/eot font/opentype font/otf image/svg+xml image/vnd.microsoft.icon;
    gzip_disable "MSIE [1-6]\.";
    
    proxy_buffering             off;
    proxy_request_buffering     off;
    
    upstream php {
        server                  <%= @php_host %>;
        
        check_fastcgi_param     "REQUEST_METHOD" "GET";
        check_fastcgi_param     "SCRIPT_NAME" "/ping";
        check_fastcgi_param     "SCRIPT_FILENAME" "/ping";
        check                   interval=5000 fall=3 rise=1 timeout=4000 default_down=false type=fastcgi port=9000;
        
        keepalive               128;
    }
    
    upstream ssi {
        server unix:/var/run/ssi.sock;
    }
    
    pagespeed                   off;
    
    pagespeed                   RewriteLevel CoreFilters;
    pagespeed                   ProcessScriptVariables on;
    pagespeed                   StaticAssetPrefix /static/;
    pagespeed                   LowercaseHtmlNames on;
    pagespeed                   FetchHttps enable;
    pagespeed                   RespectXForwardedProto on;
    pagespeed                   UseNativeFetcher on;
    pagespeed                   ListOutstandingUrlsOnError on;
    pagespeed                   XHeaderValue 'Powered by JBX Swarm';
    
    pagespeed                   LRUCacheKbPerProcess          <%= @cache_size / 2 %>;
    pagespeed                   InlineResourcesWithoutExplicitAuthorization Script,Stylesheet;
    pagespeed                   LRUCacheByteLimit             65536;
    pagespeed                   GoogleFontCssInlineMaxBytes   262144;
    pagespeed                   CssInlineMaxBytes             262144;
    pagespeed                   MemcachedServers              "127.0.0.1:11211";
    pagespeed                   MemcachedTimeoutUs            500000;
    
    pagespeed                   ImageMaxRewritesAtOnce        32;
    pagespeed                   CombineAcrossPaths            on;
    
    pagespeed                   MaxCombinedJsBytes 512000;
    pagespeed                   MaxCombinedCssBytes 512000;
    pagespeed                   CssFlattenMaxBytes 512000;
    pagespeed                   MinImageSizeLowResolutionBytes 32000;
                                
    pagespeed                   FileCachePath /dev/shm/ps/file;
    pagespeed                   FileCacheSizeKb <%= @cache_size %>;
    pagespeed                   FileCacheCleanIntervalMs 900000;
    pagespeed                   FileCacheInodeLimit 1000000;
    pagespeed                   MessageBufferSize 32000;
    pagespeed                   CreateSharedMemoryMetadataCache /dev/shm/ps/memory <%= @cache_size %>;
    pagespeed                   DefaultSharedMemoryCacheKB <%= @cache_size %>;
                                
    pagespeed                   StatisticsPath /ngx_pagespeed_statistics;
    pagespeed                   GlobalStatisticsPath /ngx_pagespeed_global_statistics;
    pagespeed                   MessagesPath /ngx_pagespeed_message;
    pagespeed                   ConsolePath /pagespeed_console;
    pagespeed                   AdminPath /pagespeed_admin;
    pagespeed                   GlobalAdminPath /pagespeed_global_admin;
    
    log_format main      '$remote_addr - $remote_user [$time_local]  '
      '"$request" $status $bytes_sent '
      '"$http_referer" "$http_user_agent" '
  		'"$gzip_ratio"';

    log_format download  '$remote_addr - $remote_user [$time_local]  '
      '"$request" $status $bytes_sent '
      '"$http_referer" "$http_user_agent" '
  		'"$http_range" "$sent_http_content_range"';

    log_not_found               off;
    access_log                  off;
    error_log                   off;
    
    server {
        listen 80 reuseport deferred fastopen=16384 backlog=16384;
        listen 443 ssl spdy http2 reuseport deferred fastopen=16384 backlog=16384;
        server_name ~^((?<subdomain>www|m|tablet)\.)?(?<domain>.+)$ default_server;
        
        root                        /html;
        aio                         threads=pool_ps;
        
        gzip                        on;
        gzip_vary                   on;
        gzip_proxied                any;
        
        access_log                  /var/log/nginx/access_log main buffer=4k flush=1m;
        error_log                   /var/log/nginx/error_log warn;
        
        #ssl_session_cache           shared:SSL:64m;
        #ssl_session_timeout         120m;
        #ssl_dhparam                 /etc/nginx/dhparam.pem;
        #ssl_protocols               TLSv1 TLSv1.1 TLSv1.2;
        #ssl_ciphers                 EECDH+CHACHA20:EECDH+CHACHA20-draft:EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;
        #ssl_prefer_server_ciphers   on;
        #
        #ssl_session_tickets         on; 
        #ssl_session_ticket_key      /etc/nginx/ticket.key;
        #
        #ssl_stapling                on;
        #ssl_stapling_verify         on;
        #ssl_trusted_certificate     /html/certs/root.pem;
        #
        #ssl_certificate             /html/certs/ssl.pem;
        #ssl_certificate_key         /html/certs/ssl.key;
        
        pagespeed                   on;
        
        pagespeed                   Domain $domain;
        pagespeed                   Domain *.$domain;
        
        pagespeed                   MapOriginDomain localhost $domain $real_scheme$host;
        pagespeed                   MapOriginDomain localhost *.$domain $real_scheme$host;
        
        #pagespeed                   LoadFromFileMatch "^https?://$host/([^/]+)/assets/(.*)" "/html/templates/\\1/{$device}assets\\2";
        
        pagespeed                   EnableFilters add_instrumentation;
        pagespeed                   EnableFilters collapse_whitespace;
        pagespeed                   EnableFilters dedup_inlined_images;
        pagespeed                   EnableFilters elide_attributes;
        pagespeed                   EnableFilters inline_google_font_css;
        pagespeed                   EnableFilters lazyload_images;
        pagespeed                   EnableFilters move_css_to_head;
        pagespeed                   EnableFilters insert_dns_prefetch;
        pagespeed                   EnableFilters prioritize_critical_css;
        pagespeed                   EnableFilters remove_comments;
        pagespeed                   EnableFilters rewrite_css,sprite_images;
        pagespeed                   EnableFilters convert_jpeg_to_progressive;
        pagespeed                   EnableFilters convert_jpeg_to_webp;
        pagespeed                   EnableFilters flatten_css_imports;
        pagespeed                   EnableFilters inline_preview_images;
        pagespeed                   EnableFilters resize_mobile_images;
        pagespeed                   EnableFilters defer_javascript;
        pagespeed                   EnableFilters combine_javascript,combine_css;
        
        add_header                  X-Cache-Status $upstream_cache_status;
        add_header                  X-Frame-Options SAMEORIGIN;
        add_header                  X-XSS-Protection "1; mode=block;";
        add_header                  Strict-Transport-Security "max-age=31536000;" always;
        
        location ~ "\.pagespeed\.([a-z]\.)?[a-z]{2}\.[^.]{10}\.[^.]+" {
            add_header              "" "";
        }
        location ~ ^/static/     { }
        location ~ ^/swarm_radar { }
        
        location ~ ^/nginx {
            stub_status             on;
            
            access_log              off;
            allow                   127.0.0.1;
            deny                    all;
        }
        
        location ~ ^/upstream {
            check_status            json;
            
            access_log              off;
            allow                   127.0.0.1;
            deny                    all;
        }
        
        location ~ ^/(?<theme>[^/]*)(?<path>/.*)?$ {
            proxy_set_header        Host $domain;
            proxy_cache             cache_ssi;
            proxy_cache_key         $real_scheme$domain$uri;
            
            proxy_pass              http://ssi/$theme/$device$path;
        }
        
        set                         $no_cache 0;
        
        if ($request_method = POST) {
            set $no_cache 1;
        }
        
        location ~ \.php$ {
            try_files               $fastcgi_script_name =403;
            include                 /etc/nginx/fastcgi.conf;
            
            aio                     threads=pool_php;
            
            fastcgi_cache           cache_php;
            fastcgi_cache_key       $request_method$remote_addr$real_scheme$host$request_uri;
            
            fastcgi_cache_bypass    $no_cache;
            fastcgi_no_cache        $no_cache;
            
            fastcgi_split_path_info ^(.+\.php)(/.+)$;
            set                     $path_info $fastcgi_path_info;
            fastcgi_param           PATH_INFO $path_info;
            
            fastcgi_pass            php;
        }
    }
    server {
        listen                      unix:/var/run/ssi.sock;
        server_name                 default_server;
        
        aio                         threads=pool_ssi;
        
        sendfile                    off;
        gzip                        off;
                                    
        ssi                         on;
        ssi_last_modified           on;
        ssi_types                   application/x-javascript text/css application/javascript text/javascript text/plain;
        
        log_subrequest              off;
        ssi_silent_errors           off;
        
        set                         $default '/default';
        
        location ~ /\.\./domains/(?<domain>[^/]+)(?<version>/(default|mobile|desktop|tablet))(?<path>/.*)$ {
            root                    /html/domains/$domain;
            
            try_files               $version$path $default$path @empty;
        }
        
        location ~ ^(?<theme>/[^/]*)?(?<version>/(default|mobile|desktop|tablet))(?<path>/.*)?$ {
            root                    /html/templates;
            
            set                     $base_path '/../domains/$host$version';
            
            index                   $theme$version${path}index.html                      $theme$default${path}index.html 
                                    /../domains/$host$version$theme${path}index.html     /../domains/$host$default$theme${path}index.html;
            
            try_files               $theme$version$path                     $theme$version$path.html
                                    $theme$default$path                     $theme$default$path.html
                                    /../domains/$host$version$theme$path    /../domains/$host$version$theme$path.html
                                    /../domains/$host$default$theme$path    /../domains/$host$default$theme$path.html
                                    =404;
        }
        
        location @empty {
            return 200 "";
        }
    }
}
