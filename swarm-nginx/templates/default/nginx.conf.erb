user www-data;
pid /var/run/nginx.pid;
worker_processes 1;
worker_rlimit_nofile 131072;

events {
    worker_connections 65536;
    use epoll;
    multi_accept on;
}

http {
    server_tokens off;

    # config to don't allow the browser to render the page inside an frame or iframe
    add_header X-Frame-Options SAMEORIGIN;
    
    # when serving user-supplied content, include a X-Content-Type-Options: nosniff header along with the Content-Type: header,
    add_header X-Content-Type-Options nosniff;
    
    # This header enables the Cross-site scripting (XSS) filter built into most recent web browsers.
    add_header X-XSS-Protection "1; mode=block";
    
    keepalive_timeout 120;
    keepalive_requests 524288;
    sendfile         on;
    tcp_nopush       on;
    tcp_nodelay      on;
    reset_timedout_connection on;

    client_body_buffer_size 16k;
    client_max_body_size 64k;
    client_header_buffer_size 1k;
    large_client_header_buffers 4 1k;
    output_buffers 2 32k;
    postpone_output 1460;
		
    client_header_timeout  3m;
    client_body_timeout    3m;
    send_timeout           3m;
		
    open_file_cache max=16384 inactive=5m;
    open_file_cache_valid 5m;
    open_file_cache_min_uses 1;
    open_file_cache_errors on;
		
    gzip on;
    gzip_comp_level 5;
    gzip_min_length  1000;
    gzip_buffers     32 4k;
    gzip_types       application/x-javascript text/css application/javascript text/javascript text/plain text/xml application/json application/vnd.ms-fontobject application/x-font-opentype application/x-font-truetype application/x-font-ttf application/xml font/eot font/opentype font/otf image/svg+xml image/vnd.microsoft.icon;
    gzip_disable "MSIE [1-6]\.";
    
    log_format main      '$remote_addr - $remote_user [$time_local]  '
      '"$request" $status $bytes_sent '
      '"$http_referer" "$http_user_agent" '
  		'"$gzip_ratio"';

    log_format download  '$remote_addr - $remote_user [$time_local]  '
      '"$request" $status $bytes_sent '
      '"$http_referer" "$http_user_agent" '
  		'"$http_range" "$sent_http_content_range"';
		
    log_not_found off;
    access_log /var/log/nginx.error_log main buffer=4k flush=1m;
    error_log /var/log/nginx.error_log warn;
    
    fastcgi_read_timeout 10;
    fastcgi_buffering on;
    fastcgi_buffers 256 4k;
    fastcgi_buffer_size 4k;
    
    server {
        listen 80;
        server_name default_server;
        root /html;
        
        pagespeed on;
        pagespeed LowercaseHtmlNames on;
        
        index index.html;
        try_files $uri $uri/ /index.php?_url=$uri&$args;
        
        location /ngx_pagespeed_statistics { allow all;  }
        location /ngx_pagespeed_global_statistics { allow all;  }
        location /ngx_pagespeed_message { allow all;  }
        location /pagespeed_console { allow all;  }
        location ~ ^/pagespeed_admin { allow all;  }
        location ~ ^/pagespeed_global_admin { allow all;  }
        
        pagespeed StatisticsPath /ngx_pagespeed_statistics;
        pagespeed GlobalStatisticsPath /ngx_pagespeed_global_statistics;
        pagespeed MessagesPath /ngx_pagespeed_message;
        pagespeed ConsolePath /pagespeed_console;
        pagespeed AdminPath /pagespeed_admin;
        pagespeed GlobalAdminPath /pagespeed_global_admin;
        
        location ~ \.php$ {
            try_files $uri index.php =404;
            fastcgi_pass unix:/var/run/php5-fpm.sock;
            fastcgi_index index.php;
            fastcgi_split_path_info       ^(.+\.php)(/.+)$;
            fastcgi_param PATH_INFO       $fastcgi_path_info;
            fastcgi_param PATH_TRANSLATED $document_root$fastcgi_path_info;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
            include fastcgi_params;
            fastcgi_read_timeout 600;
        }
    }

}